<form>
    <div class="row mt-4">
        <div class="col-8">
            <input type="text" class="form-control mb-4" placeholder="Quiz name">
        </div>
        <div class="col-4">
            <button class="btn btn-success float-right">Create</button>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="accordion" id="quizAccordion">
                <div class="card">
                    <div class="card-header" id="heading1">
