<style>
    .timer {
        position: relative;
        height: 150px;
        width: 150px;
    }

    .timer-circle {
        fill: none;
        stroke: none;
    }

    .timer-path-elapsed {
        stroke-width: 7px;
        stroke: grey;
    }

    .timer-label {
        position: absolute;
        width: 150px;
        height: 150px;
        top: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
    }

    .timer-path-remaining {
        stroke-width: 7px;
        stroke-linecap: round;
        transform: rotate(90deg);
        transform-origin: center;
        transition: 1s linear all;
        stroke: #158cba;
    }

    .timer-svg {
        transform: scaleX(-1);
    }
</style>

<div class="timer">
    <svg class="timer-svg" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
        <g class="timer-circle">
            <circle class="timer-path-elapsed" cx="50" cy="50" r="45" />
            <path id="timer-path-remaining"
                  stroke-dasharray="283"
                  class="timer-path-remaining"
                  d="
                              M 50, 50
                              m -45, 0
                              a 45,45 0 1,0 90,0
                              a 45,45 0 1,0 -90,0
                            "></path>
        </g>
    </svg>
    <span id="timer-label" class="timer-label"></span>
</div>